# base directory
PATH_CONFIG=$(realpath ${BASH_SOURCE[0]})
DIR_BASE=${PATH_CONFIG%/*}

## module folder
DIR_MODULE="${DIR_BASE}/modules"

## enumerate modules
MODULE=(
	"bash"
	"gdb"
	"vim"
	"batcat"
)

PREFIX_INSTALL_MODULE=install_
PREFIX_POST_INSTALL_MODULE=post_install_

# set dir utils
DIR_UTILS="${DIR_BASE}/utils"
## source all function
source ${DIR_UTILS}/include

### bashrc config
PATH_BASHRC_FILE_IN="${DIR_MODULE}/bash/.bashrc"
PATH_BASHRC_FILE_OUT="${HOME}/.bashrc"
PATH_BASH_ALIASES_IN="${DIR_MODULE}/bash/.bash_aliases"
PATH_BASH_ALIASES_OUT="${HOME}/.bash_aliases"

### gdbinit config
PATH_GDBINIT_IN="${DIR_MODULE}/gdb/.gdbinit"
PATH_GDBINIT_OUT="${HOME}/.gdbinit"

### vimrc config
PATH_VIMRC_IN="${DIR_MODULE}/vim/.vimrc"
PATH_VIMRC_OUT="${HOME}/.vimrc"

### batcat config
BATCAT_DIR_BASE_IN="${DIR_MODULE}/batcat"
BATCAT_DIR_BASE_OUT="${HOME}/.config/bat"
BATCAT_CONF_FILE_IN="${BATCAT_DIR_BASE_IN}/config"
BATCAT_CONF_FILE_OUT="${BATCAT_DIR_BASE_OUT}/config"

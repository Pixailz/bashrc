general {
	colors = true
	interval = 5
	separator = "#"
}

order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "read_file uptime"
order += "time"

path_exists VPN {
	path = "/proc/sys/net/ipv4/conf/tun0"
	format = "%title: %status"
	format_down = "VPN ❌"
}

wireless _first_ {
	format_up = "W: (%quality at %essid, %bitrate) %ip"
	format_down = "W ❌"
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = "E ❌"
}

battery 0 {
	format = "%status %percentage %remaining %emptytime"
	format_down = "No battery"
	status_chr = "⚡ CHR"
	status_bat = "🔋 BAT"
	status_unk = "? UNK"
	status_full = "👌 FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

disk "/" {
	format = "DISK: %avail/%total"
	low_threshold = 5
	format_below_threshold = "W: %percentage_avail"
}

cpu_usage {
	format = "CPU: %usage"
}

memory {
	format = "MEM: %used/%total"
	threshold_degraded = "10%"
	format_degraded = "MEMORY: %free"
}

volume master {
	format = "♪: %volume"
	format_muted = "♪: muted"
}

read_file uptime {
	path = "/proc/uptime"
}

time {
	format = "%d-%m-%Y %H:%M:%S"
}

## unicode in nerd font

declare -gA NERD_CHAR
NERD_CHAR=(
	["LOGO_UBUNTU"]="\uebc9"
	["LOGO_DEBIAN"]="\uebc5"
	["LOGO_TERMUX"]="\ue70e"
	["LOGO_KALI"]="\uf327"
	["LOGO_ALPINE"]="\uf300"
	["LOGO_SSH"]="\uebaa"
	["LOGO_APPLE"]="\ue711"
	["LOGO_GIT"]="\ue708"
)

for key in ${!NERD_CHAR[@]}; do
	declare -g "${key}"="$(printf "%b${UNI_PAD}" "${NERD_CHAR[${key}]}")"
done

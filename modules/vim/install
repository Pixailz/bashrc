#!/bin/bash

## BINDED FUNCTION

function	install::vim::plugin()
{
	local	repo_link="${1?}"

	utils::update_repo "${repo_link}" "${PLUGIN_DIR}"
}

function	install::vim::plugins()
{
	utils::mkdir "${PLUGIN_DIR}"

	log::info "[${ORE}vim${RST}] Checking for plugins"
	utils::update_repo "https://github.com/joshdick/onedark.vim" "${PLUGIN_DIR}"
	utils::update_repo "https://github.com/tribela/vim-transparent" "${PLUGIN_DIR}"
	utils::update_repo "https://github.com/preservim/nerdtree" "${PLUGIN_DIR}"
	utils::update_repo "https://github.com/vim-airline/vim-airline" "${PLUGIN_DIR}"
	utils::update_repo "https://github.com/ryanoasis/vim-devicons" "${PLUGIN_DIR}"
	utils::update_repo "https://github.com/tiagofumo/vim-nerdtree-syntax-highlight" "${PLUGIN_DIR}"
	utils::update_repo "https://github.com/airblade/vim-gitgutter" "${PLUGIN_DIR}"
}

function	install::vim()
{
	rm -rf "${TARGET_DIR}/colors"
	utils::move_dir "${MOD_FILE_DIR}" "${TARGET_DIR}" y

	install::vim::plugins
}

# Start
function	module::start()
{
	local	base="${BASH_SOURCE[0]?}"

	# remove filename
	base="${base/install/}"
	# if base dir is relative, suffix PWD to base
	if [[ ${base} =~ ^\./.*$ ]]; then
		base="${PWD}/${base}"
	fi
	# if not sourced, BASH_SOURCE keep current file when $0 keep launched file
	if [ "${BASH_SOURCE[0]}" -ef "${0}" ]; then
		source "${base}../../dot"

		## BINDED FUNCTION
		module::install "${MOD_NAME}"
	fi
}

module::start

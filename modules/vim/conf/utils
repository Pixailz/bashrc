" MapKey to all mode
function	MapKey(key, act)
	exe 'nmap '.a:key.' '.a:act.'<CR>'
	exe 'vmap '.a:key.' <esc>'.a:act.'<CR>'
	exe 'imap '.a:key.' <esc>'.a:act.'<CR>a'
endfunction

" Trim leading space
function TrimLeadingSpace()
	let l:save = winsaveview()
	keeppatterns %s/\s\+$//e
	call winrestview(l:save)
endfunction

" Trim before save
function Save()
	if !&modifiable
		return
	endif
	call TrimLeadingSpace()
	exe ':wa!'
endfunction

" Close tab
function CloseTab()
	if tabpagenr() == 1
		exe ":q!"
	else
		exe ":tabclose"
	endif
endfunction

let g:TermOpened = 'false'

" Toggling term
" not working
function ToggleTerm()
	if g:TermOpened == 'false'
		exe ':term bot'
		TermOpened = 'true'
	else
		TermOpened = 'false'
	endif
endfunction

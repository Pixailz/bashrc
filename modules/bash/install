#!/bin/bash

function	post::install::bash()
{
	print::warn "to make effect you have to source your ${R}~/.bashrc${RST}"
}

function	install::bash()
{
	for file in "${PATH_BASH_FILE_IN[@]}"; do
		utils::move_file "${DIR_MODULE}/bash/${file}" ${PATH_BASH_DIR_OUT}
	done

	# configure git
	git config --global user.name "Pixailz"
	git config --global user.email "pixailz1@gmail.com"
	git config --global core.editor "vim"
}

# if not sourced, BASH_SOURCE keep current file when $0 keep launched file
if [ "${BASH_SOURCE[0]}" -ef "${0}" ]; then
	if [ "${0}" -ef "install" ]; then
		source ../../run
	elif [ "${0}" -ef "bash/install" ]; then
		source ../run
	else
		source ./run
	fi
	install::bash
	post::install::bash
fi
